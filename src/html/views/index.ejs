<!DOCTYPE html>
<html lang="en">
  <%= require('../partials/head.ejs')({ title: 'House' }) %>
  <body>
    <header class="header" id="header">
      <div class="container">
        <div class="header__logo logo">
          <picture>
            <source
              srcset="<%= require('@images/icons/icon.svg') %>"
            />
            <img
              class="logo__img"
              src="<%= require('@images/icons/icon.svg') %>"
              alt="icon"
            />
          </picture>
          <h4>Ink. House</h4>
        </div>
        <hr class="line">
        <nav class="header__nav">
          <ul class="header__list">
            <li><a class="header__list-link" href="#collection">Репродукции</a></li>
            <li><a class="header__list-link" href="#newproducts">Новинки</a></li>
            <li><a class="header__list-link" href="#team">О нас</a></li>
            <li><a class="header__list-link cart" href="#">
            <img class="header__list-cart" src="<%= require('@images/icons/shopping-cart.svg') %>">
            </a></li>
          </ul>
        </nav>
      </div>
    </header>
    <main>
      <section class="about-product" id="about-product">
        <div class="container">
            <img class="about-product__img" src="<%= require('@images/about-product-image.jpg') %>" alt="the product">
          <div class="about-product__info">
            <h1 class="about-product__info-title">Реплики картин <br> от <span class="about-product__info-title-house">Ink. House</span></h1>
            <p class="about-product__info-subtitle">Высокое качество отрисовки на плотной бумаге или льняном холсте. Редкие произведения, доступные цены.</p>
            <button class="button about-product__info-btn">Продукция</button>
          </div>
        </div>
      </section>
      <section class="collection" id="collection">
        <div class="container">
          <div class="collection__headrow">
            <h2>Репродукции</h2>
            <div class="collection__filter">
              <button data-origin="france" class="button collection__filter-item active">Франция</button>
              <button data-origin="germany" class="button collection__filter-item">Германия</button>
              <button data-origin="england" class="button collection__filter-item">Англия</button>
            </div>
          </div>
          <% const france = [ 
            { src: 'cupids-hunting.jpg', author: 'Марсель Руссо', title: 'Охота Амура', tools: 'Холст, масло (50x80)', price: '14 500 руб'},
            { src: 'lady-with-a-dog.jpg', author: 'Анри Селин', title: 'Дама с собачкой', tools: 'Акрил, бумага (50х80)', price: '16 500 руб'},
            { src: 'a-procedure.jpg', author: 'Франсуа Дюпон', title: 'Процедура', tools: 'Цветная литография (40х60)', price: '20 000 руб'},
            { src: 'the-rose.jpg', author: 'Луи Детуш', title: 'Роза', tools: 'Бумага, акрил (50х80)', price: '12 000 руб'},
            { src: 'a-bird`s-meal.jpg', author: 'Франсуа Дюпон', title: 'Птичья трапеза', tools: 'Цветная литография (40х60) ', price: '22 500 руб'},
            { src: 'the-landscape-with-a-fish.jpg', author: 'Пьер Моранж', title: 'Пейзаж с рыбой', tools: 'Цветная литография (40х60) ', price: '20 000 руб'},
            ];
            const germany = [
            { src: 'above-the-city.jpg', author: 'Курт Вернер', title: 'Над городом', tools: 'Цветная литография (40х60)', price: '16 000 руб' },
            { src: 'nestlings.jpg', author: 'Макс Рихтер', title: 'Птенцы', tools: 'Холст, масло (50х80)', price: '14 500 руб' },
            { src: 'among-the-leaves.jpg', author: 'Мартин Майер', title: 'Среди листьев', tools: 'Цветная литография (40х60)', price: '20 000 руб' },
            { src: 'bright-bird.jpg', author: 'Герман Беккер', title: 'Яркая птица', tools: 'Цветная литография (40х60)', price: '13 000 руб' },
            { src: 'woodpeckers.jpg', author: 'Вульф Бауэр', title: 'Дятлы', tools: 'Бумага, акрил (50х80)', price: '20 000 руб' },
            { src: 'big-waters.jpg', author: 'Вальтер Хартманн', title: 'Большие воды', tools: 'Бумага, акрил (50х80)', price: '23 000 руб' },
            ];
            const england = [
            { src: 'wild-beast.jpg', author: 'Пол Смит', title: 'Дикий зверь', tools: 'Акварель, бумага (50х80)', price: '19 500 руб' },
            { src: 'rocky-coast.jpg', author: 'Джон Уайт', title: 'Скалистый берег', tools: 'Цветная литография (40х60)', price: '17 500 руб' },
            { src: 'river-and-mountains.jpg', author: 'Джим Уотсон', title: 'Река и горы', tools: 'Акварель, бумага (50х80)', price: '20 500 руб' },
            { src: 'white-parrot.jpg', author: 'Юджин Зиллион', title: 'Белый попугай', tools: 'Цветная литография (40х60)', price: '15 500 руб' },
            { src: 'night-fish.jpg', author: 'Эрик Гиллман', title: 'Ночная рыба', tools: 'Бумага, акрил (50х80)', price: '12 500 руб' },
            { src: 'red-cat.jpg', author: 'Альфред Барр', title: 'Рыжий кот', tools: 'Цветная литография (40х60)', price: '21 000 руб' },
            ];
            %>
          <div class="collection__box">
            <ul class="collection__list active" id="france">
              <% france.forEach(i => { %>
                <li class="collection__item">
                  <img src="<%= require(`@images/${i.src}`) %>" alt="<% i.title %>" class="collection__item-img">
                  <p class="colletion__item-author"><%= i.author %></p>
                  <h3 class="colletion__item-name"><%= i.title %></h3>
                  <p class="collection__item-tools"><%= i.tools %></p>
                  <p class="collection__item-price"><%= i.price %></p>
                  <button class="button collection__item-btn">В корзину</button>
                </li>
              <% }) %>
            </ul>
            <ul class="collection__list" id="germany">
              <% germany.forEach(i => { %>
                <li class="collection__item">
                  <img src="<%= require(`@images/${i.src}`) %>" alt="<% i.title %>" class="collection__item-img">
                  <p class="colletion__item-author"><%= i.author %></p>
                  <h3 class="colletion__item-name"><%= i.title %></h3>
                  <p class="collection__item-tools"><%= i.tools %></p>
                  <p class="collection__item-price"><%= i.price %></p>
                  <button class="button collection__item-btn">В корзину</button>
                </li>
              <% }) %>
            </ul>
            <ul class="collection__list" id="england">
              <% england.forEach(i => { %>
                <li class="collection__item">
                  <img src="<%= require(`@images/${i.src}`) %>" alt="<% i.title %>" class="collection__item-img">
                  <p class="colletion__item-author"><%= i.author %></p>
                  <h3 class="colletion__item-name"><%= i.title %></h3>
                  <p class="collection__item-tools"><%= i.tools %></p>
                  <p class="collection__item-price"><%= i.price %></p>
                  <button class="button collection__item-btn">В корзину</button>
                </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </section>
      <section class="newproducts" id="newproducts">
        <div class="container">
          <div class="newproducts__title">
            <img class="newproducts__title-img" src="<%= require('@images/icons/collection-star.svg') %>" alt="icon"/>
            <h2 class="newproducts__title-text">
              Новая коллекция <br /> французских авторов
            </h2>
          </div>
          <p class="newproducts__subtitle">
            Сложно сказать, почему акционеры крупнейших компаний призывают нас к новым свершениям, которые, в свою очередь, должны быть заблокированы в рамках своих собственных рациональных ограничений. 
            <span style="display: block; margin-bottom: 15px;"></span>
            Принимая во внимание показатели успешности, граница обучения кадров предопределяет высокую востребованность направлений прогрессивного развития.
          </p>
          <button class="button newproducts__btn">Ознакомиться</button>
        </div>
      </section>
      <section class="team" id="team">
        <div class="container">
          <div class="team__img">
            <img src="<%= require('@images/team-img.png')%>" alt="" class="team__img-frame">
          </div>
          <div class="team__info">
            <h2 class="team__info-title">Наша команда</h2>
            <p class="team__info-subtitle">Значимость этих проблем настолько очевидна, что базовый вектор развития позволяет оценить значение экспериментов, поражающих по своей масштабности и грандиозности. Мы вынуждены отталкиваться от того, что консультация с широким активом.</p>
            <div class="team__info-media">
              <img src="<%= require('@images/team-member-1.svg')%>" alt="" class="team__info-media-icon">
              <img src="<%= require('@images/team-member-2.jpg')%>" alt="" class="team__info-media-icon">
              <img src="<%= require('@images/team-member-3.jpg')%>" alt="" class="team__info-media-icon">
            </div>
          </div>
        </div>
      </section>
    </main>
    <footer class="footer" id="footer">
      <div class="container">
        <div class="footer__contacts">
          <div class="logo footer__contacts-logo">
            <img class="logo__img" src="<%= require('@images/icons/icon.svg') %>" alt="icon"/>
            <h4>Ink. House</h4>
          </div>
          <div class="footer__contacts-telcom">
            <a href="tel:+79995435454">+7 (999) 543-54-54</a>
            <p><a href="">Мастерская</a></p>
          </div>
        </div>
        <div class="footer__shortcut">
          <ul class="footer__shortcut-list">
            <li class="footer__shortcut-item"><a href="#collection">Репродукции</a></li>
            <li class="footer__shortcut-item"><a href="">Франция</a></li>
            <li class="footer__shortcut-item"><a href="">Германия</a></li>
            <li class="footer__shortcut-item"><a href="">Англия</a></li>
          </ul>
          <ul class="footer__shortcut-list">
            <li class="footer__shortcut-item"><a href="#newproducts">Новинки</a></li>
            <li class="footer__shortcut-item"><a href="">2021</a></li>
            <li class="footer__shortcut-item"><a href="">2022</a></li>
          </ul>
          <ul class="footer__shortcut-list">
            <li class="footer__shortcut-item"><a href="#team">О нас</a></li>
            <li class="footer__shortcut-item"><a href="">Художники</a></li>
            <li class="footer__shortcut-item"><a href="">Менеджеры</a></li>
          </ul>
          <hr class="line">
          <ul class="footer__shortcut-list media">
            <li class="footer__shortcut-item socialbox">
              <div class="footer__shortcut-item social">
                <a href=""><img src="<%= require('@images/icons/media-f.svg')%>" alt="" class="footer__mediacopy-media-item"></a>
                <a href=""><img src="<%= require('@images/icons/media-i.svg')%>" alt="" class="footer__mediacopy-media-item"></a>
                <a href=""><img src="<%= require('@images/icons/media-y.svg')%>" alt="" class="footer__mediacopy-media-item"></a>
              </div>
            </li>
            <li class="footer__shortcut-item copyright">Ink. House ®</li>
            <li class="footer__shortcut-item copyright">All rights reserved</li>
          </ul>
        </div>
      </div>
    </footer>
  </body>
</html>
